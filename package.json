{
    "name": "container-superposition",
    "version": "0.1.3",
    "description": "Solution-ready devcontainer templates and features with guided initialization",
    "type": "module",
    "main": "dist/scripts/init.js",
    "bin": {
        "container-superposition": "./dist/scripts/init.js"
    },
    "scripts": {
        "build": "tsc",
        "init": "tsx scripts/init.ts",
        "init:build": "npm run build && node dist/scripts/init.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:smoke": "bash scripts/test.sh",
        "docs:generate": "tsx docs/generate-docs.ts && prettier --write docs/overlays.md",
        "lint": "tsc --noEmit && npm run format:check",
        "lint:fix": "npm run format",
        "format": "prettier --write \"**/*.{ts,js,json,md,yaml,yml}\"",
        "format:check": "prettier --check \"**/*.{ts,js,json,md,yaml,yml}\"",
        "clean": "rm -rf dist",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "devcontainer",
        "development-containers",
        "docker",
        "vscode",
        "codespaces",
        "templates",
        "scaffolding"
    ],
    "author": "veggerby",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/veggerby/container-superposition.git"
    },
    "files": [
        "dist/",
        "templates/",
        "features/",
        "overlays/",
        "tool/**/*.json",
        "tool/**/*.yml",
        "tool/**/*.yaml",
        "tool/**/README.md",
        "docs/**/*.md",
        "!docs/generate-docs.ts",
        "!**/*.tgz",
        "README.md",
        "LICENSE"
    ],
    "dependencies": {
        "@inquirer/checkbox": "^5.0.4",
        "@inquirer/prompts": "^8.2.0",
        "boxen": "^8.0.1",
        "chalk": "^5.6.2",
        "commander": "^14.0.3",
        "js-yaml": "^4.1.1",
        "ora": "^9.3.0"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^25.2.3",
        "@vitest/ui": "^4.0.18",
        "prettier": "^3.4.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^4.0.18"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
